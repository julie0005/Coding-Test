class TrappedWater {   
    public int trap(int[] height) {
        int maxHeight=0;
        int maxIdx=0;
        int water=0;
        for(int i=0; i<height.length; i++){
            if(height[i]>maxHeight){
                maxHeight=height[i];
                maxIdx=i;
            }
        }
        int leftMax=height[0], rightMax=height[height.length-1];
        for(int i=0; i<maxIdx; i++){
            if(leftMax<height[i]) leftMax=height[i];
            else if(leftMax>height[i]) water+=leftMax-height[i];
        }
        for(int i=height.length-1; i>maxIdx; i--){
            if(rightMax<height[i]) rightMax=height[i];
            else if(rightMax>height[i]) water+=rightMax-height[i];
        }
        
        return water;
    }
}