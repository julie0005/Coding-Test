class TargetNumber {
    int targetNumber;
    int[] elements;
    int answer = 0;
    public void dfs(int idx,int coefficient, int sum){
        sum+=coefficient*elements[idx];
        if(idx==elements.length-1){
            if(sum==targetNumber) answer++;
            return;
        }
        dfs(idx+1, 1, sum);
        dfs(idx+1, -1,sum);
    }
    public int solution(int[] numbers, int target) {
        targetNumber=target;
        elements=numbers;
        dfs(0,1,0);
        dfs(0,-1,0);
        return answer;
    }
}